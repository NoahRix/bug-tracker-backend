<html>
    <head>
        <style>
            .inline {
                display: inline;
            }
            .link-button {
                background: none;
                border: none;
                color: blue;
                text-decoration: underline;
                cursor: pointer;
                font-size: 1em;
                font-family: serif;
                padding: 0;
            }
            .link-button:focus {
                outline: none;
            }
            .link-button:active {
                color:red;
            }
            .flex-row {
                display: flex;
                flex-direction: row;
            }
            .input{
                height: 20px;
            }
            .input-frame{
                border: solid #000 1px;
                margin-left: 10px;
            }
            .input-field{
                background-color: #b2ddeb;
            }
            .input-tag{
                padding-left: 2px;
                padding-right: 2px;
            }
        </style>
    </head>
    <body>
        <% routes.forEach((route, index) => {%>    
            <div class="flex-row">
            <%if (route.substring(5, 8) == "get") { %>
                <form class="flex-row" method="get" action="<%=route%>"><input class="link-button" href="" value="<%=route%>" type="submit"></input>
                    <%if(routeParams[index] != null) {%>
                        <%routeParams[index].forEach((param) => {%>
                            <div class="input-frame">
                                <div class="input-field flex-row">
                                    <div class="input-container">
                                        <%if(param.includes("dt_")){%>
                                        <!-- <input class="input" type="datetime-local" name="<%=param%>"/> -->
                                        <p>ajnindfgz</p>
                                        <%}else{%>
                                            <input class="input" type="text" name="<%=param%>"/>
                                        <%}%>
                                        </div>
                                    <div class="input-tag">
                                        <div><%=param%></div>
                                    </div>                                                                
                                </div>
                            </div>
                        <%})%>
                    <%}%>
                </form>
            <%}%>
            </div>
            <div class="flex-row">
            <%if (route.substring(5, 9) == "post") { %>
                <form class="flex-row" method="post" action="<%=route%>"><input class="link-button" href="" value="<%=route%>" type="submit"></input>
                <%if(routeParams[index] != null) {%>
                    <%routeParams[index].forEach((param) => {%>
                        <div class="input-frame">
                            <div class="input-field flex-row">
                                <div class="input-container">
                                    <%if(param.includes("dt_")){%>
                                        <input class="input" type="datetime-local" name="<%=param%>"/>
                                        <%}else{%>
                                            <input class="input" type="text" name="<%=param%>"/>
                                        <%}%>
                                </div>
                                <div class="input-tag">
                                    <div><%=param%></div>
                                </div>
                            </div>
                        </div>
                    <%})%>
                <%}%>
                </form>
            <%}%>
            </div>
        <%})%>
    </body>
</html>